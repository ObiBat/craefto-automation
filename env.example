# CRAEFTO Automation Environment Variables
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# CORE AI API KEYS
# =============================================================================

# OpenAI API Key for content generation
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude API Key for content generation
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# =============================================================================
# VISUAL GENERATION
# =============================================================================

# Discord bot or proxy webhook URL for Midjourney image generation
MIDJOURNEY_WEBHOOK=https://discord.com/api/webhooks/your_webhook_url_here

# =============================================================================
# SOCIAL MEDIA APIS
# =============================================================================

# Twitter/X API Configuration
TWITTER_API_KEY=your_twitter_consumer_key_here
TWITTER_API_SECRET=your_twitter_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_token_secret_here

# LinkedIn API Configuration (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key_here

# =============================================================================
# EMAIL MARKETING
# =============================================================================

# ConvertKit API Key (Primary email service)
CONVERTKIT_API_KEY=your_convertkit_api_key_here

# Mailchimp API Key (Alternative email service)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us1

# SMTP Configuration (Fallback for direct email sending)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# =============================================================================
# INTEGRATION AUTOMATION
# =============================================================================

# Make.com webhook URL for workflow integrations
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your_webhook_id_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Application Environment
ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=INFO

# Automation Settings
AUTOMATION_SCHEDULE_HOURS=4
MAX_CONTENT_GENERATION_RETRIES=3

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=*

# Performance
MAX_WORKERS=4

# =============================================================================
# RATE LIMITING & FAULT TOLERANCE
# =============================================================================

# Global Rate Limits (Fallback)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Service-Specific Rate Limits (calls per minute)
OPENAI_RATE_LIMIT=20
ANTHROPIC_RATE_LIMIT=15
TWITTER_RATE_LIMIT=300
LINKEDIN_RATE_LIMIT=100
SUPABASE_RATE_LIMIT=100
CONVERTKIT_RATE_LIMIT=120
MIDJOURNEY_RATE_LIMIT=5
MAKE_WEBHOOK_RATE_LIMIT=60

# Retry Logic with Exponential Backoff
MAX_RETRIES=3
BASE_RETRY_DELAY=1.0
MAX_RETRY_DELAY=60.0
EXPONENTIAL_BASE=2.0
JITTER_ENABLED=true

# Queue System Configuration
QUEUE_MAX_SIZE=1000
QUEUE_TIMEOUT=300.0
QUEUE_BATCH_SIZE=10
QUEUE_PROCESSING_INTERVAL=1.0

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60.0
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=requests.exceptions.RequestException

# =============================================================================
# CRAEFTO BRAND CONFIGURATION
# =============================================================================

# Brand Voice (can be customized via environment variable)
# BRAND_VOICE="Premium, crafted, SaaS-focused, practical, speed-oriented, film noise, viby"

# Note: Brand colors, target audience, and content pillars are configured in code
# but can be accessed via the /brand/config API endpoint

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Additional API keys for extended functionality
# NEWS_API_KEY=your_news_api_key_here
# REDDIT_CLIENT_ID=your_reddit_client_id_here
# REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
# GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
#
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate API keys regularly
# 4. Use environment-specific configurations
# 5. For production, set ENVIRONMENT=production
# 6. For production, change SECRET_KEY to a strong random string
# 7. For production, restrict CORS_ORIGINS to specific domains
#
# Example production CORS_ORIGINS:
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
#
# =============================================================================
